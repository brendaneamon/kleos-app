<h2 class="view-header">Gods, Heroes, and Heroines <%= link_to("(add new)", new_figure_path) if current_user %></h2>
<div class="index-container">
<% @figures.each do |figure| %>
  <% if figure.is_mortal %>
    <div class="figure">
      <h3><%= link_to figure.name, figure %></h3>
      <p><%= figure.greek_name %></p>
      <%= image_tag figure.img_url, class: "img-small" %>
    </div>
  <% else %>
  <div class="figure divine">
    <h3><%= link_to figure.name, figure %></h3>
    <p><%= figure.greek_name %></p>
    <%= image_tag figure.img_url, class: "img-small" %>
  </div>
  <% end %>
<% end %>
</div>
