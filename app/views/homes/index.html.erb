<h2 class="view-header">Homes of Major Figures <%= link_to("(Add New Home)", new_home_path) if current_user %></h2>
<div class="index-container">
<% @homes.each do |home| %>
  <div class="home">
    <h3><%= link_to home.name, home %></h3>
    <p><%= home.greek_name %></p>
    <%= image_tag home.img_url, class: "img-small" %>
  </div>
<% end %>
</div>
